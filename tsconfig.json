{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESnext",
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}